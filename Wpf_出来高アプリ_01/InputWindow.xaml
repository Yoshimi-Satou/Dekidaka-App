                <TextBlock x:Name="textBlock_Copy3" HorizontalAlignment="Right" Margin="0,0,147,284" TextWrapping="Wrap" Text="×" VerticalAlignment="Bottom" Height="47" Width="66" FontSize="48" TextAlignment="Center"/>
